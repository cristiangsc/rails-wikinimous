<div class="container">

<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>

 <div class="row">
   <div class="col-12">
    <% @articles.each do |article|  %>
      <ul>
       <li>
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
       </li>
      </ul>
    <% end %>
   </div>
  </div>
 </div>
