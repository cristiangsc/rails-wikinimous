<div class="container">
<% flash.each do |key, value| %>
      <div class="alert alert-success">
            <%= value %>
      </div>
<% end %>

  <div class="row">
   <div class="col-12">
      <h2><%= @article.title %></h2> 
      
      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, article_path(@article), method: :delete, data:{confirm:"Are you sure?"}, class:"btn btn-sm btn-danger" %>
      <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path(@article), class:"btn btn-sm btn-primary" %>
      <p><%= @article.content %></p>
     
     
  </div>
 </div>
</div>